$("#card").html('<%=j render :partial => "partials/card_comment_like_edtracker_modal", :locals => { :card => @card,:likes => @likes, :comments=>@comments}  %>');
<% image_present  =  @card.card_comment_likes.last.user.avatar? rescue  false %>
 <% if image_present %>
$(".ed_tracker_msg_img<%=@card.id %>").html('<%= image_tag @card.card_comment_likes.last.user.avatar.url(:thumb),alt: "image" , class: 'avatar-image div5' %>')
 <%else%>
 $(".ed_tracker_msg_img<%=@card.id %>").html('<%= image_tag  "avatar.png" , class: 'avatar-image ',alt: "image" %>')
 <%end %>
$('#comment-modal<%=@card.id%>').modal('show')