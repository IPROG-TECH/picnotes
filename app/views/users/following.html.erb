<% if @dash == 1 %>
  <%= render './partials/user_dashboard' %>
<% elsif @dash == 2 %>
  <%= render './partials/other_user_dashboard' %>
<% else %>
<% end%>

<div class = 'flex-center'>
  <div class = "notes-container" style = 'margin-top: 20px;'>
    <% @following.each do |user| %>
      <div class = 'text-center note-container'>
        <%= link_to user_path(user) do %>
        <% if user.avatar? %>
          <%= image_tag user.avatar.url(:thumb), class: 'follow-image' %>
        <% else %>
          <%= image_tag 'avatar.png', :style => 'width: 100%;' , class: 'follow-image' %>
        <% end %>

        <div class = 'note-container-text' style = 'text-align: center !important;'>
          <p class = 'mobile-font note-btn-font' style = 'text-transform: capitalize'> <%= user.first_name %> <%= user.last_name %></p>
          <p class = 'mobile-font note-btn-font'> Picnotes: <%= user.notes.count %> </p>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
