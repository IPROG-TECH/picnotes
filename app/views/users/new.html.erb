<h1 class = "hello"> Sign Up </h1>

<div class = "creation_form">
<%= simple_form_for @user do |f| %>
  <%= f.input :first_name, label: 'First Name' %>
  <%= f.input :last_name, label: 'Last Name' %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: 'Password Confirmation' %>
  <%= f.input :gender, as: :radio_buttons, collection:[['Male'], ['Female']] %>
  <%= f.input :date_of_birth, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, order: [:month, :day, :year] %>
  <%= f.submit  class: 'btn btn-primary'%>
<% end %>
</div>
