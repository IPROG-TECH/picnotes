<div class="sign-up" style="font-size: 12px;">
<div class="container" style="padding-top: 50px;">
<div class="row">
  <div class="col-md-6">
    <%= image_tag 'signup-login.png', style: 'width: 90%; height: 90%; margin-bottom: 20px;' %>
  </div>
  <div class="col-md-6" style="margin-top:50px;">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= image_tag 'logo.png', class: 'form-logo' %>
        <div class="justify-content-center">
          <h1 style="font-family: Cako; font-size: 24px; font-weight: 400; line-height: 28.8px; text-align: center; 
          margin-top: 30px; margin-bottom: 0px; margin-left: 160px;">Sign Up</h1>
        </div>
        <div class="modal-body", style="padding: 0px;">
          <div class="creation_form bg-white rounded", style="padding: 0px;">
            <%= simple_form_for @user, html: { class: 'signup-form' } do |f| %>
              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                  <ul>
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group row">
                  <div class="col">
                  <div class="form-group row" style="margin-top: 5px;">
                  <label class="col-form-label col-lg-6" style="font-size: 16px; margin-left: -1.5rem;color: #707070;font-family:Aileron;">First Name</label>
                  <div class="col-sm-12">
                  <%= f.input :first_name, label: false, input_html: { class: 'form-control' } %>
                </div>
              </div>
                  </div>
                  <div class="col">
                  <div class="form-group row" style="margin-top: 5px;">
                  <label class="col-form-label col-lg-6" style="font-size: 16px; margin-left: -2rem;color:#707070;font-family:Aileron;">Last Name</label>
                <div class="col-sm-12">
                  <%= f.input :last_name, label: false, input_html: { class: 'form-control' } %>
                </div>
              </div>
                  </div>
              </div>

              <div class="form-group row" style="margin-top: 5px;">
                <label class="col-sm-1 col-form-label" style="font-size: 16px;color: #707070;font-family:Aileron;">Email</label>
                <div class="col-sm-12">
                  <%= f.input :email, label: false, input_html: { class: 'form-control' } %>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-2 col-form-label" style="font-size: 16px;color: #707070;font-family:Aileron;">Password</label>
                <div class="col-sm-12">
                  <%= f.input :password, label: false, input_html: { class: 'form-control' } %>
                </div>
              </div>

              <div class="form-group row">
              <label class="col-form-label col-lg-6" style="font-size: 16px; margin-left: -6rem; color: #707070;font-family:Aileron;">Confirm Password</label>
              <div class="col-sm-12">
                  <%= f.input :password_confirmation, label: false, input_html: { class: 'form-control' } %>
                </div>
              </div>

              <div class="form-group" style="margin-top: 30px; width: 100%; padding: 0 2% ;" >
                <%= f.button :submit, 'Sign Up', class: 'btn sign-up btn-custom btn-block custom-btn-sm', style: 'display: flex;font-family:Aileron;font-size:18px;font-weight:400;height:48px;'%>
              </div>

              <div class="or-divider">
                <span>Or</span>
              </div>

              <div class="row" style="margin-top: 10px;">
                <div class="col-sm-6" >
                  <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-custom-icon btn-block custom-btn-sm" ,style: "color: #BC171D !important;font-size:16px;font-family:Aileron;" do %>
                    <img src="<%= asset_path('google-new.png') %>" alt="google" style="width: 20px; height: 20px; margin-right: 8px;" /> Google
                  <% end %>
                </div>
                <div class="col-sm-6">
                  <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-custom-icon btn-block custom-btn-sm", style: "color: #BC171D !important;font-size:16px;font-family:Aileron;" do %>
                    <img src="<%= asset_path('facebook-new.png') %>" alt="Facebook" style="width: 20px; height: 20px; margin-right: 8px;" /> Facebook
                  <% end %>
                </div>
              
              </div>

              <div style="margin-top: 30px;font-size:16px;font-family:Aileron;color:#707070;">Don't have an account? <%= link_to "Log in", new_session_path, style: "color: #BC171D;" %></div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
