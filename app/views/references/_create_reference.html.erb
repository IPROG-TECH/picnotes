<script>

function openReference(tab){
  var i;
  var x = document.getElementsByClassName('click-reference');
  for (i = 0; i < x.length; i++) {
    x[i].style.display = 'none';
    x[i].style.borderBottom = 'thick #FFF solid';
  }
  document.getElementById(tab).style.display = 'block';
}

</script>

<div id = 'references' class = 'tabcontent'>
  <div class = 'reference-tabs'>
    <button class = 'reference-tab Textbooks' onclick='openReference("Textbooks")'> Textbooks </button>
    <button class = 'reference-tab Videos' onclick='openReference("Videos")'> Videos </button>
    <button class = 'reference-tab Papers' onclick='openReference("Papers")'> Papers </button>
    <button class = 'reference-tab Add' onclick='openReference("Add")'> Add </button>
  </div>

  <div id = 'reference'>
    <div id = 'Textbooks' class = 'click-reference'>
      <%= render @textbooks %>
    </div>

    <div id = 'Videos' class = 'click-reference' style = 'display: none;'>
      <%= render @videos %>
    </div>

    <div id = 'Papers' class = 'click-reference' style = 'display: none;'>
      <%= render @papers %>
    </div>

    <% if current_user %>
      <% if current_user.username == @note.user.username %>
        <div id = 'Add' class = 'click-reference' style = 'display: none;'>
          <div id = 'Added-Reference' style = 'text-align: center; color: #74a89f;'>
          </div>
          <%= simple_form_for([@note, @reference], remote: true) do |f| %>
            <div>
              <%= f.input :title %>
              <%= f.input :author %>
              <%= f.input :link %>
              <%= f.input :file_type, collection: Reference::TYPE %>
            </div>
            <div class = 'form-btn-container text-center'>
              <%= f.button :submit, :class => 'no-look-btn' %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
