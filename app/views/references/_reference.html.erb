<% if reference.title.length > 0 || reference.image_source.length > 0%>
  <div style="display:flex; margin-top:10px;align-items: center;">
        <div style="height: 75px;text-align: center;display: flex;align-items: center; border-radius:5px;">
        </div>
      <div style="margin-top:10px;">
              <% arr = ["v", "p", "t", "s"]
                arr.each do |f|
              %>
                    <% if reference.file_type.eql?(f) && reference.link.eql?("https://") && reference.title.present? %>
                      <p style="margin-bottom: 6px;"> Title: <%= reference.title %> </p>
                    <% elsif reference.file_type.eql?(f) && reference.title.present?%>
                      <p style="margin-bottom: 6px;"> Title: <%= link_to (reference.title), reference.link, style:"color:#BC1D17;", target: :_blank %> </p>
                    <% end %>
                    <% if reference.file_type.eql?(f) && reference.image_source.present?%>
                      <p> <b>Source:</b> <%=  link_to (reference.image_source), reference.link, target: :_blank %> </p>
                    <% end %>
              <% end %>
            <% if reference.author.length > 0 %>
              <p style="margin-top:3px;margin-bottom:10px;"> Author: <%= reference.author %></p> 
            <% end %>
            <br>
            
      </div>
      </div>
<% end %>






<script type="text/javascript">
  var links = $('a:contains(\'https://\')')
  var i;
  for (i = 0; i < links.length; i++) {
    if (links[i].text  == ("https://")) {
      links[i].remove();
    }
  }
</script>



