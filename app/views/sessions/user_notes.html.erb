<%= render './partials/user_dashboard' %>

<div id='note-content'></div>

<div class = 'flex-center'>
  <div class = "notes-container">
    <div class = 'note-container'>
      <button
        type = 'button'
        style = 'padding: 0; border: none; background-color: transparent;'
        data-toggle = 'modal'
        data-target = '#newNoteModal'
        data-whatever = '@mdo'>
        <%= image_tag 'add.png', class: 'add-note-btn' %>
        <div class = 'note-container-text-center'>
          <p class = "mobile-font note-btn-font"> Add New Picnotes </p>
        </div>
      </button>
    </div>

    <% @notes.where(archived: false).each do |note| %>
      <div class = 'note-container' onclick='ChangeUrl("", "<%="notes/"+note.id.to_s+"-"+note.title.parameterize%>")'>
        <%= link_to(note_path(note), remote: true) do %>
        <%= image_tag note.image.url(:thumb), class:"image" if note.image.present? %>
        <div class = 'note-container-text'>
          <p class = "mobile-font note-btn-font"> <%= truncate(note.title, length: 40) %> </p>
        </div>
        <% end %>
        <%= render partial: 'notes/overlay_buttons', locals: {note: note} %>
      </div>
    <% end %>
  </div>
</div>
