<%= render './partials/user_dashboard' %>

<div id='note-content'></div>

<div class = 'flex-center'>
  <div class = "notes-container">
    <div class = 'text-center'>
      <button
        type = 'button'
        style = 'padding: 0; border: none;'
        data-toggle = 'modal'
        data-target = '#newNoteModal'
        data-whatever = '@mdo'>
        <%= image_tag 'add.png', class: 'add-note-btn' %>
        <div class = 'note-container-text-center'>
          <p class = "mobile-font note-btn-font"> New Note </p>
        </div>
      </button>
    </div>
    <% @user.notes.each do |note| %>

      <div class = 'text-center'>
        <%= link_to(note_path(note), remote: true) do %>
          <%= image_tag note.image.url(:thumb) if note.image.present? %>
          <div class = 'note-container-text'>
            <p class = "mobile-font note-btn-font"> <%= truncate(note.title, length: 40) %> </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
