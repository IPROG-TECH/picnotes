<% if current_user == @user && current_user != nil && @user != nil && current_user.id == @folder.user_id %>
  <%= render './partials/user_dashboard' %>
  <div style='text-align: center;'>
    <p> Folder Name: <strong> <%= @folder.name %> </strong></p>
    <%= link_to('Delete', folder_path(@folder), class: 'blue-appearance-btn', data: {confirm: 'Are you sure?'}, method: :delete) %>
  </div>
<% else %>

  <%= render './partials/other_user_dashboard' %>
  <div style='text-align: center;'>
    <p> Folder Name: <strong> <%= @folder.name %> </strong></p>
    <%#= link_to('Delete', folder_path(@folder), class: 'blue-appearance-btn', data: {confirm: 'Are you sure?'}, method: :delete) %>
  </div>
<% end %>

<div id='note-content'></div>

<div class='flex-center'>
  <div class="notes-container" style='margin-top: 20px;'>
    <% @folder.notes.where(archived: false).each do |note| %>
      <%= render partial: 'notes/note_general', locals: {note: note} %>
  <% end %>
  </div>
</div>
