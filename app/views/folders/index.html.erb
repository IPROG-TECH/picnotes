<%= render './partials/user_dashboard' %>

<%= render './modals/new_folder_modal' %>

<div class = 'flex-center'>
  <div class = "notes-container">
    <div class = 'note-container'>
      <button
        type = 'button'
        style = 'padding: 0; border: none; background-color: transparent;'
        data-toggle = 'modal'
        data-target = '#newFolderModal'
        data-whatever = '@mdo'>
        <%= image_tag 'add.png', class: 'add-note-btn' %>
        <div class = 'note-container-text-center'>
          <p class = "mobile-font note-btn-font"> New Folder </p>
        </div>
      </button>
    </div>

    <% if @folders.count > 0 %>
      <% @folders.each do |folder| %>
          <div class = 'note-container'>
            <%= link_to(folder_path(folder), remote: true) do %>
            <% folder.notes.each_with_index do |note ,i| %>
              <% if i < 4 %>
                <div class = 'board-test-image'>
                  <% if note.image.url.length > 0 %>
                    <%= image_tag note.image.url(:board_thumb), class: 'image-size' %>
                  <% else %>
                    <%= image_tag 'empty.png', class: 'image-size' %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
              <div style = 'width: 200px; height: 200px;'></div>
              <div class = 'note-container-text'>
                <p class = "mobile-font note-btn-font"> <%= truncate(folder.name, length: 40) %> </p>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
