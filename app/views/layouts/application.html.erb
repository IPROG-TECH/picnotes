<!DOCTYPE html>
<html>
  <head>
    <title>Picnotes</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= display_meta_tags  %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-136450115-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-136450115-1');
    </script>
  </head>

  <body>
    <nav class = "navbar">
      <%= link_to root_path do %>
        <%= image_tag 'logo-clean.png', class: 'logo-image' %>
      <% end %>

      <div class = 'search-bar'>

        <%= form_tag(notes_path, method: :get) do %>
          <%= text_field_tag(:search, params[:search]) %>


          <% if @searchmodel %>
            <% if @searchmodel == '3' %>
              <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]], ['Picnotes', 3])) %>
            <% elsif @searchmodel == '2' %>
              <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]], ['Person', 2])) %>
            <% else %>
              <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]])) %>
            <% end %>
          <% else %>
          <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]])) %>
          <% end %>

          <%= button_tag(type: "submit", class: 'blue-appearance-btn') do %>
              <%= fa_icon('search') %>
          <% end %>
        <% end %>

      </div>

      <div>

        <%= link_to 'About Us', about_us_notes_path, class: 'header-link set-font-family'%>&nbsp;&nbsp;
        <%= link_to 'Guidelines', community_guideline_notes_path, class: 'header-link set-font-family' %>&nbsp;&nbsp;

        <% if user_signed_in? %>

          <button
            type = 'button'
            class = 'blue-appearance-btn'
            data-toggle = 'modal'
            data-target = '#newNoteModal'
            data-whatever = '@mdo'>
            <%= fa_icon('pencil 2x') %>
          </button>

          <%= link_to feed_index_path, class: 'blue-appearance-btn' do %>
            <%= fa_icon('user-circle 2x') %>
          <% end %>
        <% else %>

          <button
            type = 'button'
            class = 'blue-appearance-btn'
            data-toggle = 'modal'
            data-target = '#newSessionModal'
            data-whatever = '@mdo'>
            <%= fa_icon('pencil 2x') %>
          </button>

          <button
            type = 'button'
            class = 'sign-in-btn'
            data-toggle = 'modal'
            data-target = '#newSessionModal'
            data-whatever = '@mdo'>
            Log In
          </button>

          <button
            type = 'button'
            class = 'header-blue-btn'
            data-toggle = 'modal'
            data-target = '#newUserModal'
            data-whatever = '@mdo'>
            Sign Up
          </button>

        <% end %>
      </div>
    </nav>

    <div class = "nav-spacing">
    </div>

    <%= render './modals/new_session_modal' %>
    <%= render './modals/new_note_modal' %>
    <%= render './modals/new_user_modal' %>
    <% if user_signed_in? %>
      <%= render './modals/session_modal' %>
      <%= render './modals/edit_session_modal' %>
    <% end %>
    <%= yield %>

  </body>

  <script>
    $(document).on('ready page:load', function () {
      $('#post_tag_ids').chosen({
        allow_single_deselect: true,
        width: '100%'
      })
    });
  </script>
</html>
