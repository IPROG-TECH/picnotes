<!DOCTYPE html>
<html>
  <head>
    <title>PicnotesServer</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class = "navbar">
      <%= link_to root_path do %>
        <%= image_tag 'logo-clean.png', class: 'logo-image' %>
      <% end %>

      <div class = 'search-bar'>

        <%= form_tag(notes_path, method: :get) do %>
          <%= text_field_tag(:search, params[:search]) %>
          <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['User', 2], ['Title', 3]])) %>
          <%= button_tag(type: "submit", class: 'no-look-btn') do %>
              <%= fa_icon('search') %>
          <% end %>
        <% end %>

      </div>

      <div>
        <% if user_signed_in? %>

          <button
            type = 'button'
            class = 'white-btn'
            data-toggle = 'modal'
            data-target = '#newNoteModal'
            data-whatever = '@mdo'>
            <%= fa_icon('pencil 2x') %>
          </button>

          <button
            type = 'button'
            class = 'white-btn'
            data-toggle = 'modal'
            data-target = '#sessionModal'
            data-whatever = '@mdo'>
            <%= fa_icon('user-circle 2x') %>
          </button>

        <% else %>

          <button
            type = 'button'
            class = 'white-btn'
            data-toggle = 'modal'
            data-target = '#newSessionModal'
            data-whatever = '@mdo'>
            Sign In
          </button>

          <button
            type = 'button'
            class = 'white-btn'
            data-toggle = 'modal'
            data-target = '#newUserModal'
            data-whatever = '@mdo'>
            Sign Up
          </button>

        <% end %>
      </div>
    </nav>

    <div class = "nav-spacing">
    </div>

    <%= render './modals/new_session_modal' %>
    <%= render './modals/new_note_modal' %>
    <%= render './modals/new_user_modal' %>
    <% if user_signed_in? %>
      <%= render './modals/session_modal' %>
      <%= render './modals/edit_session_modal' %>
    <% end %>
    <%= yield %>
  </body>

  <script>
    $(document).on('ready page:load', function () {
      $('#post_tag_ids').chosen({
        allow_single_deselect: true,
        width: '100%'
      })
    });
  </script>
</html>
