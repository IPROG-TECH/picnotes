<!DOCTYPE html>
<html>
  <head>
    <title>Picnotes</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= display_meta_tags  %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-136450115-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];

        function gtag() {
            dataLayer.push(arguments);
        }

        gtag('js', new Date());

        gtag('config', 'UA-136450115-1');
    </script>
  </head>

  <body>
    <nav class = "navbar full-display">
      <%= link_to root_path do %>
        <%= image_tag 'logo-clean.png', class: 'logo-image' %>
      <% end %>

      <div class = 'search-bar non-mobile  '>

        <%= form_tag(notes_path, method: :get) do %>
          <%= text_field_tag(:search, params[:search]) %>


          <% if @searchmodel %>
            <% if @searchmodel == '3' %>
              <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]], ['Picnotes', 3])) %>
            <% elsif @searchmodel == '2' %>
              <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]], ['Person', 2])) %>
            <% else %>
              <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]])) %>
            <% end %>
          <% else %>
          <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]])) %>
          <% end %>

          <%= button_tag(type: "submit", class: 'blue-appearance-btn') do %>
              <%= fa_icon('search') %>
          <% end %>
        <% end %>

      </div>

      <div >



        <a class="header-link set-font-family non-mobile" href="/notes/about_us">About Us</a>&nbsp;&nbsp;
        <a class="header-link set-font-family non-mobile" href="/notes/community_guideline">Guidelines</a>&nbsp;

        <% if user_signed_in? %>

          <button
            type = 'button'
            class = 'blue-appearance-btn'
            data-toggle = 'modal'
            data-target = '#newNoteModal'
            data-whatever = '@mdo'>
            <%= fa_icon('pencil 2x') %>
          </button>

          <%= link_to feed_index_path, class: 'blue-appearance-btn' do %>
            <%= fa_icon('user-circle 2x') %>
          <% end %>
        <% else %>

          <button
            type = 'button'
            class = 'header-link set-font-family non-mobile'
            data-toggle = 'modal'
            data-target = '#newSessionModal'
            data-whatever = '@mdo'>
            Create Picnotes
          </button>

          <button
            type = 'button'
            class = 'header-link sign-in-link '
            data-toggle = 'modal'
            data-target = '#newSessionModal'
            data-whatever = '@mdo'>
            Log In
          </button>

          <button
            type = 'button'
            class = 'header-blue-btn '
            data-toggle = 'modal'
            data-target = '#newUserModal'
            data-whatever = '@mdo'>
            Sign Up
          </button>

        <% end %>
      </div>
    </nav>




<div class="topnav mobile-display " id="myTopnav" >
  <!--    <nav class = "navbar">-->

<div  >
  <%= link_to root_path, style:'box-shadow: 0 8px 6px -6px #666;' do %>
  <%= image_tag 'logo-clean.png', class: 'logo-image  img-logo-responsive' %>
    <% unless user_signed_in? %>

    <button
        type='button'
        class='header-link sign-in-link iphone-screen '
        data-toggle='modal'
        data-target='#newSessionModal'
        data-whatever='@mdo'
        onclick="myFunction()">
        Log In
      </button>
    <button
        type='button'
        class='header-blue-btn '
        data-toggle='modal'
        data-target='#newUserModal'
        data-whatever='@mdo'
        onclick="myFunction()">
        Sign Up
      </button>
    <% end %>
  <% end %>

  <% if user_signed_in? %>

           <a style="padding-top: 0;"> <button
              type = 'button'
              class = 'blue-appearance-btn'
              data-toggle = 'modal'
              data-target = '#newNoteModal'
              data-whatever = '@mdo'
              onclick="myFunction()">
  <%= fa_icon('pencil 2x') %>
           </button></a>

  <%= link_to feed_index_path, class: 'blue-appearance-btn' , style:'padding-top: 0;' do %>
  <%= fa_icon('user-circle 2x') %>
  <% end %>
  <% else %>



    <a style="padding-top: 0;">
      <button
        type='button'
        class='header-link set-font-family'
        data-toggle='modal'
        data-target='#newSessionModal'
        data-whatever='@mdo'
        onclick="myFunction()">
        Create Picnotes
      </button>
    </a>
    <%end%>

  <a style="padding-top: 0;" class="header-link set-font-family" href="/notes/community_guideline">&nbsp; Guidelines</a>
  <a  style="padding-top: 0;" class="header-link set-font-family " href="/notes/about_us">&nbsp; About Us</a>

   <a class="container">
     <div class='search-bar '>

       <%= form_tag(notes_path, method: :get) do %>
       <%= text_field_tag(:search, params[:search]) %>
     <% if @searchmodel %>
    <% if @searchmodel == '3' %>
    <%= select_tag(:searchtest, options_for_select([['Tags', 1], ['Person', 2], ['Picnotes', 3]], ['Picnotes', 3])) %>
