<!DOCTYPE html>
<html>
  <head>
    <title>PicnotesServer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class = "navbar">
      <%= link_to 'Picnotes', root_path, class: "navbar-brand" %>

      <div>
        <% if user_signed_in? %>
          <span class = 'btn'> Welcome, <%=link_to current_user.username, session_path %> </span>
          <%= link_to 'New Note', new_note_path, class: "btn" %>
          <%= link_to 'Sign Out', session_path, method: :delete, class: "btn" %>
        <% else %>
          <%= link_to 'Sign Up', new_user_path, class: "btn" %>
          <%= link_to 'Sign In', new_session_path, class: "btn" %>
        <% end %>
      </div>
    </nav>

    <div class = "nav-spacing">
    </div>

    <% if flash[:notice].present? %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert].present? %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <div class = "profile-header">
        <h1><%= @user.username %></h1>
      </div>

      <div class = "profile-menu">
        <p> <%= link_to 'My Feed', root_path%> </p>
        <p> <%= link_to 'My Notes', session_path %> <span> (<%= @user.notes.count %>) </span> </p>
        <p> My Boards </p>
        <p> <%= link_to 'My Faves', favorites_path %> <span> (<%= @user.favorited_notes.count %>) </span> </p>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
