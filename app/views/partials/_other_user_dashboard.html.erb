<div class='profile-dashboard'>
  <div class="profile-header">
    <div class='profile-center'>
      <div class='text-right'>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url(:thumb), class: 'avatar-image' %>
        <% else %>
          <%= image_tag 'avatar.png', class: 'avatar-image' %>
        <% end %>
        <h1 style='margin-bottom: 0;'><%= @user.first_name %> <%= @user.last_name %></h1>
        <%= render '/components/follow_button', :user => @user %>
        <p> <%= @user.city %> </p>
        <% if @user.message %>
          <% if @user.message.length > 0 %>
            <p> <%= @user.message %> </p>
          <% end %>
        <% end %>
      </div>
      <%# if @user.avatar? %>
        <%#= image_tag @user.avatar.url(:thumb), class: 'avatar-image' %>
      <%# else %>
        <%#= image_tag 'avatar.png', class: 'avatar-image' %>
      <%# end %>
    </div>

    <div class='profile-left'>
      <div class='margin-right-20 text-right'>
        <p class='picnotes-font'> Followers </p>
        <% if @user.followers.count > 0 %>
          <p> <%= link_to @user.followers.count, followers_user_path(@user), class: 'blue-appearance-btn' %></p>
        <% else %>
          <p> <%= @user.followers.count %> </p>
        <% end %>
      </div>

      <div class='margin-right-20 text-right'>
        <p class='picnotes-font'> Following </p>
        <% if @user.following.count > 0 %>
          <p> <%= link_to @user.following.count, following_user_path(@user), class: 'blue-appearance-btn' %></p>
        <% else %>
          <p> <%= @user.following.count %> </p>
        <% end %>
      </div>

      <div class='text-right'>
        <p class='picnotes-font'> Picnotes </p>
        <p> <%= @user.notes.count %> </p>
      </div>
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <div class='text-right'>
        <p class='picnotes-font'>
          <% if current_user %>
            <% if Note.find_by_user_id(params[:id]) %>
              <%= link_to(user_chats_path(current_user, :other_user => params[:id]), method: :post) do %>
                <i class='fa fa-envelope' style='font-size:36px'></i>

                </p>
              <% end %>
            <% end %>
          <% end %>
          </div>
      <div class='text-right'>
        <p class='picnotes-font'>
          <% if params[:user_id] && current_user %>
            <% if Note.find_by_user_id(params[:user_id]) %>
              <%= link_to(user_chats_path(current_user, :other_user => params[:user_id]), method: :post) do %>
                <i class='fa fa-envelope' style='font-size:36px'></i>

                </p>
              <% end %>
            <% end %>
          <% end %>
          </div>
    </div>


    <div class='profile-right'>
      <div class='text-right'>
        <h1 style='margin-bottom: 0;'><%= @user.first_name %> <%= @user.last_name %></h1>
        <p> <%= @user.city %> </p>
        <%= render '/components/follow_button', :user => @user %>
        <% if @user.message %>
          <% if @user.message.length > 0 %>
            <p> <%= @user.message %> </p>
          <% end %>
        <% end %>
      </div>
      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url(:thumb), class: 'avatar-image', style:"margin-left: 7px;" %>
      <% else %>
        <%= image_tag 'avatar.png', class: 'avatar-image' %>
      <% end %>
    </div>
  </div>

  <div class="profile-menu">
    <p> <%= link_to 'Feed', feed_index_path(user_id: @user), class: "#{cp(feed_index_path)} profile-links" %> </p>
    <p> <%= link_to 'Picnotes', user_path(id: @user), class: "#{cp(user_path(id: @user))} profile-links" %>
      <span class='note-count'> <%= @user.notes.where(archived:false).count %> </span></p>
    <p> <%= link_to 'Folders', folders_path(user_id: @user), class: "#{cp(folders_path(user_id: @user))} profile-links" %>
      <span class='note-count'> <%= @user.folders.count %> </span></p>
    <p> <%= link_to 'Faves', favorites_path(user_id: @user), class: "#{cp(favorites_path(user_id: @user))} profile-links" %>
      <span class='note-count'> <%= @user.favorited_notes.where(archived:false).count %> </span></p>
  </div>

