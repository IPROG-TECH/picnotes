<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="inter-form">
			<%= form_for @interview do |f| %>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<%= f.label :first_name %>
					  <%= f.text_field :first_name, :class => "form-control", required: true %>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<%= f.label :last_name %>
			  		<%= f.text_field :last_name, :class => "form-control", required: true %>
					</div>
				</div>
			</div>
			<div class="form-group">
			  <%= f.label :content %>
			  <%= f.text_area :content, size: "60x3", :class => "form-control", required: true %>
			</div>
			<div class="form-group">
			  <%= f.label :article %>
              <%= f.cktext_area :article, size: "60x3", :class => "form-control", id: 'article_ckeditor' %>
			</div>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, :class => "form-control", required: true %>
			</div>

			<div class="form-group">
				<%= f.label :Facebook_url %>
				<%= f.text_field :facebook, :class => "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :Twitter_url %>
				<%= f.text_field :twitter, :class => "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :LinkedIn_url %>
				<%= f.text_field :linkedIn, :class => "form-control" %>
			</div>

			<div class="form-group">
				<%= f.label :website_url %>
				<%= f.text_field :website, :class => "form-control" %>
			</div>

			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
					  <%= f.label :image %>
					  <%= f.file_field :image, :class => "upload-file", required: true%>
					</div>
				</div>
			</div>
			<div class="actions">
				<% if @interview.id.present? %>
				  <%= f.submit "Update", :class=> "btn-signup", disable_with: "Processing..." %>
        <% else %>
			    <%= f.submit "Create", :class=> "btn-signup", disable_with: "Processing..." %>
			  <% end %>  
			</div>
			<% end %>
		</div>
	</div>
</div>