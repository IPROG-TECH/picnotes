<style>
  @import url('http://getbootstrap.com/dist/css/bootstrap.css');

  html, body, .container-table {
    height: 80%;
  }

  .container-table {
    display: table;
  }

  .vertical-center-row {
    display: table-cell;
    vertical-align: middle;
  }

  body {
    background: #ffffff;
    overflow-x: hidden;
  }

  h1, p {
    text-align: center;
  }

  input, textarea {
    width: 100%;
  }

  .form-height {
    height: 187px;
  }

  textarea.form-control {
    height: 187px;

  }
</style>



<div class="contact-us-form-box">
  <h1>Contact Us</h1>
  <form action="/notes/contact_us_form" method="get">
    <div class="form-group">
      <label for="email">Email</label>
      <input class="form-control" id="email" type="email" name="Email">
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <textarea class="form-control form-height" id="message" name="Message"></textarea>
    </div>
    <input class="btn btn-primary" type="submit" value="Submit"/>


    <br><br>
    <div >

      <p  class="contact-us" style="text-align:justify;text-justify: inter-word">For General
        Inquiries:<a href="mailto:info@picnotes.org">info@picnotes.org</a></p>

      <p  class="contact-us" style="text-align:justify;text-justify: inter-word"> For
        Support:<a href="mailto:info@picnotes.org">support@picnotes.org</a></p>

      <p  class="contact-us" style="text-align:justify;text-justify: inter-word"> For
        Partners:<a href="mailto:info@picnotes.org">partners@picnotes.org</a></p>

      <p  class="contact-us" style="text-align:justify;text-justify: inter-word"> For
        Press:<a href="mailto:info@picnotes.org">press@picnotes.org</a></p>
    </div>

  </form>
</div>

<div class="container container-table">
  <div class="row vertical-center-row">
    <div class="text-center col-md-11 col-md-offset-4 footer-color">


    </div>
  </div>
