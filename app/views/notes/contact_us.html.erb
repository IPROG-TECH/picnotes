<div class='profile-dashboard'>
  <br>
  <div class="profile-menu">
    <p> <%= link_to 'About Us', about_us_notes_path, class: " profile-links set-font-family" %> </p>
    <p> <%= link_to 'Community Guidelines', community_guideline_notes_path, class: " profile-links set-font-family" %>
    <p> <%= link_to 'Terms and Conditions', terms_and_conditions_notes_path, class: " profile-links set-font-family" %>
    <p> <%= link_to 'Contact Us', contact_us_notes_path, class: "current profile-links set-font-family" %>
  </div>
</div>
<section class="contact-us-page">
  <div class="container pt-5">
    <div class="row">
      <div class="col-12">
        <h4 class="heading-contact">Contact Us</h4>
      </div>
    </div>
    <div class="row pt-5 mt-5">
      <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <%= image_tag "message.png",class: "message" %>
      </div>
      <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <form action="/notes/contact_us_form" method="get">
          <div class="card">
            <h5 class="text-center heading-drop-line">Drop us a line</h5>
            <div class="contact-form">
              <div class="form-group pt-2">
                <input type="email" class="form-control" placeholder="Email" name="Email">
              </div>
              <div class="form-group pt-2">
                <input type="text" class="form-control" placeholder="Message" name="Message">
              </div>
            </div>
          </div>
          <button type="Submit" class="btn-submit mb-5">Submit</button>
        </form>
      </div>
    </div>
</section>