
<div class = "modal fade" id = 'newSessionModal' tabindex='-1' role = 'dialog' aria-labelledby = 'newSessionModalLabel' aria-hidden='true'>
  <div class = 'modal-dialog' role = 'document'>
    <div class = 'modal-content'>
      <div class = 'modal-header new-modal-header'>
        <h5 class = 'modal-title' id = 'newSessionModalLabel' style = 'color: white'> Sign In </h5>
        <button type = 'button' class = 'close' data-dismiss = 'modal' aria-label = 'Close'>
          <span aria-hidden = 'true'> &times; </span>
        </button>
      </div>

      <div class = 'modal-body'>
        <div class = 'text-center'>
          <%= image_tag 'logo-clean.png', class: 'intro-image' %>
        </div>
       <div class="container">

        <a href=  <%=	 user_facebook_omniauth_authorize_path %> , class="fb btn">
          <i class="fa fa-facebook" style="text-align: left ;color:#ffffff;"></i>&nbsp;&nbsp; &nbsp;&nbsp; Connect with Facebook
        </a>
        <br/>
        <a href=  <%=  user_google_oauth2_omniauth_authorize_path %> , class="fb btn" style="margin-top: 7px;background: #1a73e8;">
          <i class="fa fa-google" style="text-align: left ;color:#ffffff;"></i>&nbsp;&nbsp; &nbsp;&nbsp; Connect with Google
        </a>
      </div>
        <%= simple_form_for :session, url: session_path do |f| %>

          <%#= link_to' "&nbsp; Continue with Facebook', user_facebook_omniauth_authorize_path, class: ' fa fa-facebook fb btn fab fa fa-facebook', style:"text-align: left ;color:#ffffff;"
          %>

         <p style="    text-align: center;
             margin-top: 7px;
             margin-bottom: 0px;
             border-bottom-width: 0px;
             padding-bottom: 0px;"> OR</p>
          <%= f.label 'Email' %>
          <%= f.input :email, label: false %>

          <%= f.label 'Password' %>
          <%= f.input :password, label: false %>
          <%= link_to "(forgot password)", new_password_reset_path %>

          <div class = 'form-btn-container'>
            <%= f.button :submit, 'Sign In', :class => 'blue-appearance-btn' %>
          </div>

          &nbsp;&nbsp;
        <% end %>


      </div>
    </div>
  </div>
</div>
