<div class = "modal fade" id = 'sessionModal' tabindex='-1' role = 'dialog' aria-labelledby = 'sessionModalLabel' aria-hidden='true'>
  <div class = 'modal-dialog' role = 'document'>
    <div class = 'modal-content'>
      <div class = 'modal-header new-modal-header'>
        <h5 class = 'modal-title' id = 'sessionModalLabel'> Account Information </h5>
        <button type = 'button' class = 'close' data-dismiss = 'modal' aria-label = 'Close'>
          <span aria-hidden = 'true'> &times; </span>
        </button>
      </div>

      <div class = 'modal-body'>
        <div style = 'display: flex;'>
          <div style = 'flex-basis: 50%;'>
            <p> Name: <%= @user.first_name %> <%= @user.last_name %> </p>
            <p> Username: <%= @user.username %> </p>
            <p style = 'padding-bottom: 20px;'> City: <%= @user.city %> </p>
            <%= simple_form_for @user do |f| %>
              <style>
                .form-group{
                  margin-bottom: 0;
                }
                .form-control-label{
                  margin-bottom: 0;
                }
              </style>
              <%= f.input :message, maxlength: 150, label: 'Profile Message', style: 'margin-bottom: 0px;' %>
              <div class = 'form-btn-container'>
                <%= f.button :submit, 'Update Message', :class => 'blue-appearance-btn', :style => 'padding: 0; margin-bottom: 10px;' %>
              </div>
            <% end %>
          </div>

          <div style = "flex-basis: 50%; display: flex; justify-content: center;">
            <% if @user.avatar? %>
              <%= image_tag @user.avatar.url(:thumb), class: 'avatar-image', style: 'width: 100px; height: 100px; margin-left: 0;'%>
            <% else %>
              <%= image_tag 'avatar.png', class: 'avatar-image' %>
            <% end %>
          </div>
        </div>

        <button
          type = 'button'
          class = 'blue-appearance-btn'
          data-toggle = 'modal'
          data-target = '#editSessionModal'
          data-whatever = '@mdo'
          data-dismiss="modal"
          style = 'padding: 0;'>
          Edit
        </button>

        <%= link_to 'Sign Out', session_path, method: :delete, class: 'blue-appearance-btn' %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <%= link_to 'Delete Account', archived_user_users_path, method: :delete, data: {confirm: "Are you sure, you want to delete your account?"} ,class: 'blue-appearance-btn' %>
      </div>
    </div>
  </div>
</div>
